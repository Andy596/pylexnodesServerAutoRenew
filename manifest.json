{
  "manifest_version": 3,
  "name": "Auto Renew Server",
  "version": "1.0",
  "description": "Automatically renew the server and close the tab.",
  "permissions": [
    "tabs",
    "activeTab",
    "scripting",
    "alarms"
  ],
  "host_permissions": [
    "https://client.pylexnodes.net/servers/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  }
}
